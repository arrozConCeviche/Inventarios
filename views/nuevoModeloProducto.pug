extends layout
block content
  if producto == 'modelorepuesto'
    form(method = 'POST', action = '/productos/nuevo/modeloRepuesto')
      .row
        .col.md-6
          h3.h4  Tipo
          input#tipo.form-control(name='tipo', placeholder='Tipo de Repuesto', value='', required='')
        .col.md-3
          h3.h4 Modelo
          select#modelo.custom-select.d-block.w-100(name='modelo')
            option(value='') Modelo Vehiculo
            option Camioneta
            option Deportivo
            option Comercial
            option Familiar
            option Sedan
            option Hibrido  
      br
      .row
        .col
          h3.h4 Pais de Origen
          input#paisOrigen.form-control(name='paisOrigen', placeholder='Pais de Origen', value='', required='')
        .col
          h1.h4 Precio de Venta
          input#pVenta.form-control(name='pVenta', placeholder='Precio de Venta', value='', required='')

      br
      .row  
        .col.align-left
          button.btn.btn-outline-primary Crear Nuevo Producto
  else if producto == 'modelovehiculo'
    form(method = 'POST', action = '/registroProductos/nuevo/modeloVehiculo')
      .row
        .col.md-6
          h3.h4  Tipo
          select#tipo.custom-select.d-block.w-100(name='tipo')
            option(value='') Tipo Vehiculo
            option Camioneta
            option Deportivo
            option Comercial
            option Familiar
            option Sedan
            option Hibrido    
        .col.md-3
          h3.h4 Modelo
          input#modelo.form-control(name='modelo', placeholder='Modelo de Producto', value='', required='')
      br
      .row
        .col
          h3.h4 Pais de Origen
          input#paisOrigen.form-control(name='paisOrigen', placeholder='Pais de Origen', value='', required='')
        .col
          h3.h4 Sunroof
          select#sunroof.custom-select.d-block.w-100(name='sunroof')
            option(value='') Sunroof
            option Si
            option No
      br
      .row
        .col
          h3.h4 Neumatico de Repuesto
          select#neumaticoRepuesto.custom-select.d-block.w-100(name='neumaticoRepuesto')
            option(value='') Neumatico de Repuesto
            option Si
            option No    
        .col
          h3.h4 Nivel de Seguridad
          select#seguridad.custom-select.d-block.w-100(name='seguridad')
            option(value='') Nivel de Seguridad
            option 1
            option 2
            option 3
            option 4
            option 5
      br
      .row
        .col
          h1.h4 Precio de Venta
          input#pVenta.form-control(name='pVenta', placeholder='Precio de Venta', value='', required='')
        .col
      br
      .row  
        .col
          button.btn.btn-outline-primary Crear Nuevo Producto
