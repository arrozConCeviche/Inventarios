extends layout
block content
  .row
    .col-9
    .col-3
      a.button.btn.btn-outline-primary(href='/registroSalida/nuevo') Nueva Salida de Producto
  br
  .row
    .table-responsive
      table.table.table-striped.table-sm
        thead
          tr
            th ID
            th Nombre Producto
            th Cantidad
            th Precio
            th Fecha
            th Total
        each venta, i in ventas
          each modelo, i in modelos
            - var cant = 0
            - var pTotal = 0
            each producto in venta.cuerpoSalida
              each item in producto
                if item.modelo[0].nombre == modelo.modelo
                  - cant = cant + 1
                  - pTotal = pTotal + modelo.pVenta
            if cant>0
              tbody
                td= venta.idRegistro
                td= modelo.modelo
                td= cant
                td= modelo.pVenta
                td= venta.fSalida
                td= pTotal
