extends layout
block content
  .row
    .col
      a.button.btn.btn-outline-primary.float-right(href='/users/registrar') Nuevo Usuario
  br
  .row
    .table-responsive
      table.table.table-striped.table-sm
        thead
          tr
            th Id
            th Nombre
            th Usuario
            th Rol
            th Estado
            th Acciones
          each usuario, i in usuarios 
            if usuario.rol != "Administrador"
              tbody
                td= usuario._id
                td= usuario.nombre
                td= usuario.username
                td= usuario.rol
                td= usuario.estadoLaboral
                td
                  a(href="/usuarios/"+usuario._id) Editar
